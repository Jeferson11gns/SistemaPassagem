package sistema.model;

import java.util.Calendar;

import sistema.model.pessoa.Usuario;

public class Funcionario extends Usuario {
	
	protected Calendar dataAdmissa;
	protected double salario;
	
	public Funcionario() {}
	
	public Funcionario(Calendar dataAdmissa, double salario) {
		super();
		this.dataAdmissa = dataAdmissa;
		this.salario = salario;
	}

	public Calendar getDataAdmissa() {
		return dataAdmissa;
	}

	public void setDataAdmissa(Calendar dataAdmissa) {
		this.dataAdmissa = dataAdmissa;
	}

	public double getSalario() {
		return salario;
	}

	public void setSalario(double salario) {
		this.salario = salario;
	}

	@Override
	public String toString() {
		return "Funcionario [dataAdmissa=" + dataAdmissa + ", salario=" + salario + "]";
	}
	
}
